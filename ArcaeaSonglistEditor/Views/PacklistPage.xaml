<Page x:Class="ArcaeaSonglistEditor.Views.PacklistPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:viewModels="clr-namespace:ArcaeaSonglistEditor.ViewModels"
      Title="曲包列表"
      Width="Auto"
      Height="Auto">


    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- 工具栏 -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <!-- 搜索框 -->
            <TextBox Width="200"
                       Margin="0,0,10,0"
                       Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />
            
            <Button Content="搜索" 
                    Margin="0,0,10,0"
                    Command="{Binding SearchCommand}" />
            
            <Separator Margin="0,0,10,0" />
            
            <!-- 操作按钮 -->
            <Button Content="添加曲包" 
                    Margin="0,0,10,0"
                    Command="{Binding AddPackCommand}" />
            
            <Button Content="编辑曲包" 
                    Margin="0,0,10,0"
                    Command="{Binding EditPackCommand}" />
            
            <Button Content="删除曲包" 
                    Margin="0,0,10,0"
                    Command="{Binding DeletePackCommand}" />
            
            <Separator Margin="0,0,10,0" />
            
            <Button Content="移除曲包限制" 
                    Margin="0,0,10,0"
                    Command="{Binding RemovePackRestrictionsCommand}" />
            
            <Separator Margin="0,0,10,0" />
            
            <Button Content="导入" 
                    Margin="0,0,10,0"
                    Command="{Binding ImportPacklistCommand}" />
            
            <Button Content="导出" 
                    Command="{Binding ExportPacklistCommand}" />
        </StackPanel>

        <!-- 曲包列表 -->
        <DataGrid Grid.Row="1"
                  AutoGenerateColumns="False"
                  ItemsSource="{Binding Packs}"
                  SelectedItem="{Binding SelectedPack}"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserReorderColumns="False"
                  CanUserResizeRows="False"
                  CanUserSortColumns="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" 
                                   Binding="{Binding Id}" 
                                   Width="100" />
                
                <DataGridTextColumn Header="名称" 
                                   Binding="{Binding NameLocalized.English}" 
                                   Width="200" />
                
                <DataGridTextColumn Header="描述" 
                                   Binding="{Binding DescriptionLocalized.English}" 
                                   Width="250" />
                
                <DataGridTextColumn Header="搭档" 
                                   Binding="{Binding PlusCharacter}" 
                                   Width="80" />
                
                <DataGridCheckBoxColumn Header="扩展包" 
                                       Binding="{Binding IsExtendPack}" 
                                       Width="80" />
                
                <DataGridCheckBoxColumn Header="活动扩展" 
                                       Binding="{Binding IsActiveExtendPack}" 
                                       Width="80" />
                
                <DataGridTextColumn Header="父曲包" 
                                   Binding="{Binding PackParent}" 
                                   Width="100" />
                
                <DataGridCheckBoxColumn Header="特殊显示" 
                                       Binding="{Binding HasSpecialDisplay}" 
                                       Width="80" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- 曲包详情编辑区域 -->
        <Expander Grid.Row="2" 
                  Header="曲包详情编辑" 
                  Margin="0,10,0,0"
                  IsExpanded="True">
            <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="400">
                <StackPanel Margin="10">
                    <!-- 基本信息 -->
                    <GroupBox Header="基本信息" Margin="0,0,0,10">
                        <Grid Margin="5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="ID:" Margin="0,0,10,5" VerticalAlignment="Center" />
                            <TextBox Grid.Row="0" Grid.Column="1" 
                                    Text="{Binding SelectedPack.Id, UpdateSourceTrigger=PropertyChanged}" 
                                    Margin="0,0,0,5" />

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="英文名称:" Margin="0,0,10,5" VerticalAlignment="Center" />
                            <TextBox Grid.Row="1" Grid.Column="1" 
                                    Text="{Binding SelectedPack.NameLocalized.English, UpdateSourceTrigger=PropertyChanged}" 
                                    Margin="0,0,0,5" />

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="日文名称:" Margin="0,0,10,5" VerticalAlignment="Center" />
                            <TextBox Grid.Row="2" Grid.Column="1" 
                                    Text="{Binding SelectedPack.NameLocalized.Japanese, UpdateSourceTrigger=PropertyChanged}" 
                                    Margin="0,0,0,5" />

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="英文描述:" Margin="0,0,10,5" VerticalAlignment="Center" />
                            <TextBox Grid.Row="3" Grid.Column="1" 
                                    Text="{Binding SelectedPack.DescriptionLocalized.English, UpdateSourceTrigger=PropertyChanged}" 
                                    Margin="0,0,0,5" />
                        </Grid>
                    </GroupBox>

                    <!-- 扩展包设置 -->
                    <GroupBox Header="扩展包设置" Margin="0,0,0,10">
                        <Grid Margin="5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="搭档:" Margin="0,0,10,5" VerticalAlignment="Center" />
                            <TextBox Grid.Row="0" Grid.Column="1" 
                                    Text="{Binding SelectedPack.PlusCharacter, UpdateSourceTrigger=PropertyChanged}" 
                                    Margin="0,0,0,5" />

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="父曲包ID:" Margin="0,0,10,5" VerticalAlignment="Center" />
                            <TextBox Grid.Row="1" Grid.Column="1" 
                                    Text="{Binding SelectedPack.PackParent, UpdateSourceTrigger=PropertyChanged}" 
                                    Margin="0,0,0,5" />

                            <CheckBox Grid.Row="2" Grid.Column="1" 
                                     Content="扩展包"
                                     IsChecked="{Binding SelectedPack.IsExtendPack}"
                                     Margin="0,5,0,0" />
                        </Grid>
                    </GroupBox>

                    <!-- 保存按钮 -->
                    <Button Content="保存更改" 
                            Command="{Binding EditPackCommand}"
                            HorizontalAlignment="Right"
                            Padding="10,5"
                            Margin="0,10,0,0" />
                </StackPanel>
            </ScrollViewer>
        </Expander>
    </Grid>
</Page>
