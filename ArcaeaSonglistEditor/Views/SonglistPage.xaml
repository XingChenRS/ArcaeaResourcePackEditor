<Page x:Class="ArcaeaSonglistEditor.Views.SonglistPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:viewModels="clr-namespace:ArcaeaSonglistEditor.ViewModels"
      Title="歌曲列表"
      Width="Auto"
      Height="Auto">


    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- 工具栏 -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <!-- 搜索框 -->
            <TextBox Width="200"
                     Margin="0,0,10,0"
                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}">
                <TextBox.Style>
                    <Style TargetType="TextBox">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TextBox">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="2">
                                        <ScrollViewer x:Name="PART_ContentHost" />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TextBox.Style>
                <TextBox.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="2" />
                    </Style>
                </TextBox.Resources>
            </TextBox>
            
            <Button Content="搜索" 
                    Margin="0,0,10,0"
                    Command="{Binding SearchCommand}" />
            
            <Separator Margin="0,0,10,0" />
            
            <!-- 操作按钮 -->
            <Button Content="添加歌曲" 
                    Margin="0,0,10,0"
                    Command="{Binding AddSongCommand}" />
            
            <Button Content="编辑歌曲" 
                    Margin="0,0,10,0"
                    Command="{Binding EditSongCommand}" />
            
            <Button Content="删除歌曲" 
                    Margin="0,0,10,0"
                    Command="{Binding DeleteSongCommand}" />
            
            <Separator Margin="0,0,10,0" />
            
            <Button Content="移除限制" 
                    Margin="0,0,10,0"
                    Command="{Binding RemoveRestrictionsCommand}" />
            
            <Button Content="移除所有限制" 
                    Margin="0,0,10,0"
                    Command="{Binding RemoveAllRestrictionsCommand}" />
            
            <Separator Margin="0,0,10,0" />
            
            <Button Content="导入" 
                    Margin="0,0,10,0"
                    Command="{Binding ImportSonglistCommand}" />
            
            <Button Content="导出" 
                    Command="{Binding ExportSonglistCommand}" />
        </StackPanel>

        <!-- 歌曲列表 -->
        <DataGrid Grid.Row="1"
                  AutoGenerateColumns="False"
                  ItemsSource="{Binding Songs}"
                  SelectedItem="{Binding SelectedSong}"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserReorderColumns="False"
                  CanUserResizeRows="False"
                  CanUserSortColumns="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" 
                                   Binding="{Binding Id}" 
                                   Width="100" />
                
                <DataGridTextColumn Header="标题" 
                                   Binding="{Binding TitleLocalized.English}" 
                                   Width="200" />
                
                <DataGridTextColumn Header="艺术家" 
                                   Binding="{Binding Artist}" 
                                   Width="150" />
                
                <DataGridTextColumn Header="BPM" 
                                   Binding="{Binding Bpm}" 
                                   Width="80" />
                
                <DataGridTextColumn Header="曲包" 
                                   Binding="{Binding Set}" 
                                   Width="100" />
                
                <DataGridTextColumn Header="阵营" 
                                   Binding="{Binding Side}" 
                                   Width="80" />
                
                <DataGridTextColumn Header="发布日期" 
                                   Binding="{Binding Date, Converter={StaticResource UnixTimeConverter}}"
                                   Width="120" />
                
                <DataGridTextColumn Header="难度数量" 
                                   Binding="{Binding Difficulties.Count}" 
                                   Width="80" />
                
                <DataGridCheckBoxColumn Header="有付费" 
                                       Binding="{Binding IsPaidSong}" 
                                       Width="70" />
                
                <DataGridCheckBoxColumn Header="有限制" 
                                       Binding="{Binding HasRestrictions}" 
                                       Width="70" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- 歌曲详情编辑区域 -->
        <Expander Grid.Row="2" 
                  Header="歌曲详情编辑" 
                  Margin="0,10,0,0"
                  IsExpanded="True">
            <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="400">
                <StackPanel Margin="10">
                    <!-- 基本信息 -->
                    <GroupBox Header="基本信息" Margin="0,0,0,10">
                        <Grid Margin="5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="ID:" Margin="0,0,10,5" VerticalAlignment="Center" />
                            <TextBox Grid.Row="0" Grid.Column="1" 
                                    Text="{Binding SelectedSong.Id, UpdateSourceTrigger=PropertyChanged}" 
                                    Margin="0,0,0,5" />

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="英文标题:" Margin="0,0,10,5" VerticalAlignment="Center" />
                            <TextBox Grid.Row="1" Grid.Column="1" 
                                    Text="{Binding SelectedSong.TitleLocalized.English, UpdateSourceTrigger=PropertyChanged}" 
                                    Margin="0,0,0,5" />

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="日文标题:" Margin="0,0,10,5" VerticalAlignment="Center" />
                            <TextBox Grid.Row="2" Grid.Column="1" 
                                    Text="{Binding SelectedSong.TitleLocalized.Japanese, UpdateSourceTrigger=PropertyChanged}" 
                                    Margin="0,0,0,5" />

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="艺术家:" Margin="0,0,10,5" VerticalAlignment="Center" />
                            <TextBox Grid.Row="3" Grid.Column="1" 
                                    Text="{Binding SelectedSong.Artist, UpdateSourceTrigger=PropertyChanged}" 
                                    Margin="0,0,0,5" />

                            <TextBlock Grid.Row="4" Grid.Column="0" Text="BPM:" Margin="0,0,10,5" VerticalAlignment="Center" />
                            <TextBox Grid.Row="4" Grid.Column="1" 
                                    Text="{Binding SelectedSong.Bpm, UpdateSourceTrigger=PropertyChanged}" 
                                    Margin="0,0,0,5" />
                        </Grid>
                    </GroupBox>

                    <!-- 曲包和阵营 -->
                    <GroupBox Header="曲包和阵营" Margin="0,0,0,10">
                        <Grid Margin="5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="曲包ID:" Margin="0,0,10,5" VerticalAlignment="Center" />
                            <TextBox Grid.Row="0" Grid.Column="1" 
                                    Text="{Binding SelectedSong.Set, UpdateSourceTrigger=PropertyChanged}" 
                                    Margin="0,0,0,5" />

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="阵营:" Margin="0,0,10,5" VerticalAlignment="Center" />
                            <ComboBox Grid.Row="1" Grid.Column="1" 
                                     SelectedValue="{Binding SelectedSong.Side}"
                                     SelectedValuePath="Content"
                                     Margin="0,0,0,5">
                                <ComboBoxItem>Light</ComboBoxItem>
                                <ComboBoxItem>Conflict</ComboBoxItem>
                                <ComboBoxItem>Colorless</ComboBoxItem>
                            </ComboBox>
                        </Grid>
                    </GroupBox>

                    <!-- 保存按钮 -->
                    <Button Content="保存更改" 
                            Command="{Binding EditSongCommand}"
                            HorizontalAlignment="Right"
                            Padding="10,5"
                            Margin="0,10,0,0" />
                </StackPanel>
            </ScrollViewer>
        </Expander>
    </Grid>
</Page>
