<Page x:Class="ArcaeaSonglistEditor.Views.UnlocksPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:viewModels="clr-namespace:ArcaeaSonglistEditor.ViewModels"
      Title="解锁条件"
      Width="Auto"
      Height="Auto">


    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- 工具栏 -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <!-- 搜索框 -->
            <TextBox Width="200"
                       Margin="0,0,10,0"
                       Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />
            
            <Button Content="搜索" 
                    Margin="0,0,10,0"
                    Command="{Binding SearchCommand}" />
            
            <Separator Margin="0,0,10,0" />
            
            <!-- 操作按钮 -->
            <Button Content="添加解锁条件" 
                    Margin="0,0,10,0"
                    Command="{Binding AddUnlockCommand}" />
            
            <Button Content="编辑解锁条件" 
                    Margin="0,0,10,0"
                    Command="{Binding EditUnlockCommand}" />
            
            <Button Content="删除解锁条件" 
                    Margin="0,0,10,0"
                    Command="{Binding DeleteUnlockCommand}" />
            
            <Separator Margin="0,0,10,0" />
            
            <Button Content="清空所有" 
                    Margin="0,0,10,0"
                    Command="{Binding ClearAllUnlocksCommand}" />
            
            <Separator Margin="0,0,10,0" />
            
            <Button Content="导入" 
                    Margin="0,0,10,0"
                    Command="{Binding ImportUnlocksCommand}" />
            
            <Button Content="导出" 
                    Command="{Binding ExportUnlocksCommand}" />
        </StackPanel>

        <!-- 解锁条件列表 -->
        <DataGrid Grid.Row="1"
                  AutoGenerateColumns="False"
                  ItemsSource="{Binding Unlocks}"
                  SelectedItem="{Binding SelectedUnlock}"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserReorderColumns="False"
                  CanUserResizeRows="False"
                  CanUserSortColumns="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="歌曲ID" 
                                   Binding="{Binding SongId}" 
                                   Width="120" />
                
                <DataGridTextColumn Header="难度" 
                                   Binding="{Binding RatingClass}" 
                                   Width="80" />
                
                <DataGridTextColumn Header="条件数量" 
                                   Binding="{Binding Conditions.Count}" 
                                   Width="80" />
                
                <DataGridTextColumn Header="条件描述" 
                                   Binding="{Binding GetDescription}"
                                   Width="*" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- 解锁条件详情编辑区域 -->
        <Expander Grid.Row="2" 
                  Header="解锁条件详情编辑" 
                  Margin="0,10,0,0"
                  IsExpanded="True">
            <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="400">
                <StackPanel Margin="10">
                    <!-- 基本信息 -->
                    <GroupBox Header="基本信息" Margin="0,0,0,10">
                        <Grid Margin="5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="歌曲ID:" Margin="0,0,10,5" VerticalAlignment="Center" />
                            <TextBox Grid.Row="0" Grid.Column="1" 
                                    Text="{Binding SelectedUnlock.SongId, UpdateSourceTrigger=PropertyChanged}" 
                                    Margin="0,0,0,5" />

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="难度:" Margin="0,0,10,5" VerticalAlignment="Center" />
                            <ComboBox Grid.Row="1" Grid.Column="1" 
                                     SelectedValue="{Binding SelectedUnlock.RatingClass}"
                                     SelectedValuePath="Content"
                                     Margin="0,0,0,5">
                                <ComboBoxItem>Past</ComboBoxItem>
                                <ComboBoxItem>Present</ComboBoxItem>
                                <ComboBoxItem>Future</ComboBoxItem>
                                <ComboBoxItem>Beyond</ComboBoxItem>
                                <ComboBoxItem>Eternal</ComboBoxItem>
                            </ComboBox>
                        </Grid>
                    </GroupBox>

                    <!-- 条件列表 -->
                    <GroupBox Header="解锁条件" Margin="0,0,0,10">
                        <StackPanel Margin="5">
                            <TextBlock Text="条件数量:" Margin="0,0,0,5" />
                            <TextBlock Text="{Binding SelectedUnlock.Conditions.Count}" 
                                      FontWeight="Bold" Margin="0,0,0,10" />
                            
                            <TextBlock Text="条件描述:" Margin="0,0,0,5" />
                            <TextBlock Text="{Binding SelectedUnlock.GetDescription}" 
                                      TextWrapping="Wrap" 
                                      Background="#F5F5F5" 
                                      Padding="5"
                                      Margin="0,0,0,10" />
                            
                            <TextBlock Text="注意: 解锁条件编辑功能正在开发中。当前版本支持基本信息的编辑。" 
                                      Foreground="Gray"
                                      FontStyle="Italic"
                                      TextWrapping="Wrap" />
                        </StackPanel>
                    </GroupBox>

                    <!-- 保存按钮 -->
                    <Button Content="保存更改" 
                            Command="{Binding EditUnlockCommand}"
                            HorizontalAlignment="Right"
                            Padding="10,5"
                            Margin="0,10,0,0" />
                </StackPanel>
            </ScrollViewer>
        </Expander>
    </Grid>
</Page>
